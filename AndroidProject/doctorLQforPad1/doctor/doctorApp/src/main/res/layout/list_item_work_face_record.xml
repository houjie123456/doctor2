    <com.company.linquan.app.view.RoundImageView
        android:id="@+id/list_item_person_image"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_line1"
        android:background="@drawable/img_person" />

    <com.company.linquan.app.view.MyTextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="26dp"
        android:text="姓名"
        android:textColor="#4d4d4d"
        android:textSize="@dimen/font_15"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_person_image"
        app:layout_constraintLeft_toRightOf="@+id/list_item_person_image"
        app:layout_constraintTop_toTopOf="@+id/list_item_person_image" />
    <com.company.linquan.app.view.MyTextView
        android:id="@+id/list_item_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="26dp"
        android:text="男"
        android:textColor="#4d4d4d"
        android:textSize="@dimen/font_15"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_person_image"
        app:layout_constraintLeft_toRightOf="@+id/list_item_name"
        app:layout_constraintTop_toTopOf="@+id/list_item_person_image" />
    <com.company.linquan.app.view.MyTextView
        android:id="@+id/list_item_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="26dp"
        android:text="20岁"
        android:textColor="#4d4d4d"
        android:textSize="@dimen/font_15"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_person_image"
        app:layout_constraintLeft_toRightOf="@+id/list_item_sex"
        app:layout_constraintTop_toTopOf="@+id/list_item_person_image" />
    <com.company.linquan.app.view.MyTextView
        android:id="@+id/list_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="26dp"
        android:text="已完成"
        android:textColor="#fff"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_person_image"
        app:layout_constraintLeft_toRightOf="@+id/list_item_age"
        app:layout_constraintTop_toTopOf="@+id/list_item_person_image"
        android:background="@drawable/shape_corner_state"/>

    <com.company.linquan.app.view.MyTextView
        android:id="@+id/list_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:text="预约时间:"
        android:textColor="#777"
        android:textSize="@dimen/font_13"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_person_image"
        app:layout_constraintLeft_toRightOf="@+id/list_item_person_image"
        app:layout_constraintTop_toTopOf="@+id/list_item_person_image" />
    <com.company.linquan.app.view.MyTextView
        android:id="@+id/list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:text="08:00-09:00"
        android:textColor="#000"
        android:textSize="@dimen/font_13"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_person_image"
        app:layout_constraintLeft_toRightOf="@+id/list_item_txt"
        app:layout_constraintTop_toTopOf="@+id/list_item_person_image" />

    <ImageView
        android:id="@+id/list_item_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voice_call" />

