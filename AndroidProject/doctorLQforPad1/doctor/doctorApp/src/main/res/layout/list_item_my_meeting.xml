<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/list_item_video"
        android:layout_width="104dp"
        android:layout_height="104dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <com.company.linquan.app.view.MyTextView
        android:id="@+id/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:text="视频标题"
        android:textColor="#000"
        android:textSize="@dimen/font_15"
        app:layout_constraintLeft_toRightOf="@+id/list_item_video"
        app:layout_constraintTop_toTopOf="@+id/list_item_video" />

    <com.company.linquan.app.view.MyTextView
        android:id="@+id/list_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="视频简介"
        android:textColor="#b2b2b2"
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toLeftOf="@+id/list_item_title"
        app:layout_constraintTop_toBottomOf="@+id/list_item_title" />

    <com.company.linquan.app.view.MyTextView
        android:id="@+id/list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="时间"
        android:textColor="#b2b2b2"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_video"
        app:layout_constraintLeft_toLeftOf="@+id/list_item_title" />
</android.support.constraint.ConstraintLayout>