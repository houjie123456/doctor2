<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#fff">

    <include
        android:id="@+id/head_layout"
        layout="@layout/layout_head_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_layout"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_sign_success"/>

        <com.company.linquan.app.view.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_red_color"
            android:textSize="@dimen/font_18"
            android:text="签到成功"
            android:layout_marginTop="10dp"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.company.linquan.app.view.MyTextView
                android:id="@+id/textView1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/font_14"
                android:text="姓 名"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.company.linquan.app.view.MyTextView
                android:id="@+id/result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#525252"
                android:textSize="@dimen/font_14"
                android:text="-"
                app:layout_constraintTop_toTopOf="@id/textView1"
                app:layout_constraintBottom_toBottomOf="@id/textView1"
                app:layout_constraintLeft_toRightOf="@id/textView1"/>


            <com.company.linquan.app.view.MyTextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/font_14"
                android:text="医 院"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView1"
                android:layout_marginTop="10dp"/>

            <com.company.linquan.app.view.MyTextView
                android:id="@+id/result_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#525252"
                android:textSize="@dimen/font_14"
                android:text="-"
                app:layout_constraintTop_toTopOf="@id/textView2"
                app:layout_constraintBottom_toBottomOf="@id/textView2"
                app:layout_constraintLeft_toRightOf="@id/textView2"/>

            <com.company.linquan.app.view.MyTextView
                android:id="@+id/textView3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/font_14"
                android:text="职 称"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                android:layout_marginTop="10dp"/>

            <com.company.linquan.app.view.MyTextView
                android:id="@+id/result_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#525252"
                android:textSize="@dimen/font_14"
                android:text="-"
                app:layout_constraintTop_toTopOf="@id/textView3"
                app:layout_constraintBottom_toBottomOf="@id/textView3"
                app:layout_constraintLeft_toRightOf="@id/textView3"/>


            <com.company.linquan.app.view.MyTextView
                android:id="@+id/textView4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/font_14"
                android:text="身份证"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                android:layout_marginTop="10dp"/>

            <com.company.linquan.app.view.MyTextView
                android:id="@+id/result_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#525252"
                android:textSize="@dimen/font_14"
                android:text="-"
                app:layout_constraintTop_toTopOf="@id/textView4"
                app:layout_constraintBottom_toBottomOf="@id/textView4"
                app:layout_constraintLeft_toRightOf="@id/textView4"/>


            <com.company.linquan.app.view.MyTextView
                android:id="@+id/textView5"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/font_14"
                android:text="手机号"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                android:layout_marginTop="10dp"/>

            <com.company.linquan.app.view.MyTextView
                android:id="@+id/result_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#525252"
                android:textSize="@dimen/font_14"
                android:text="-"
                app:layout_constraintTop_toTopOf="@id/textView5"
                app:layout_constraintBottom_toBottomOf="@id/textView5"
                app:layout_constraintLeft_toRightOf="@id/textView5"/>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>


    <com.company.linquan.app.view.MyTextView
        android:id="@+id/result_btn"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/base_red_color"
        android:gravity="center"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>