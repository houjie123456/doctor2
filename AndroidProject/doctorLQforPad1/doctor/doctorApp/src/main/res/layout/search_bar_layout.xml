<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center_vertical"
    android:id="@+id/search_bar_layout">

    <TextView
        android:id="@+id/search_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:background="@drawable/corner_solid_shape"
        android:text="香港"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/search_bar_first_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_result"
        android:paddingLeft="5dp"/>

    <EditText
        android:id="@+id/search_bar_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:background="@null"
        android:paddingLeft="7dp"
        android:layout_weight="1"
        android:hint="请输入搜索内容"
        android:inputType="text"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:imeOptions="actionSearch"/>

    <ImageView
        android:id="@+id/search_bar_clear_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_delete"
        android:background="@drawable/corner_solid_shape"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/search_bar_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="4dp"
        android:visibility="gone"
        android:text="删除" />
</LinearLayout>