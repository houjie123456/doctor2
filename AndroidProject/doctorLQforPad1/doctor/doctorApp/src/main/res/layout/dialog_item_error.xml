<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:padding="20dp"
    android:background="@drawable/dialog_bg_style">

    <com.company.linquan.app.view.MyTextView
        android:id="@+id/dialog_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示"
        android:textSize="@dimen/font_18"
        android:textColor="#323232"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <com.company.linquan.app.view.MyTextView
        android:id="@+id/dialog_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/font_16"
        android:textColor="#323232"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <com.company.linquan.app.view.MyTextView
            android:id="@+id/dialog_item_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/font_16"
            android:background="@drawable/shape_base_btn_style"
            android:layout_marginRight="15dp"/>

        <com.company.linquan.app.view.MyTextView
            android:id="@+id/dialog_item_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/font_16"
            android:background="@drawable/shape_base_btn_style"/>
    </LinearLayout>

</LinearLayout>